<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_confer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jossing.runboapple.confer.ConferActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="在这个界面可以与卖家商议\n苹果价格、运输价格和运输方式等"/>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/rl_2"
        android:background="@android:color/background_light">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="48dp"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:hint="你好"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:scaleType="center"
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_send_black_24dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_light">

        <Button
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商议完成，立即下单"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/my_button_shape_accent"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </RelativeLayout>

</RelativeLayout>
