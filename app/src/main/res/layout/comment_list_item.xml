<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@android:color/background_light">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/imv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/def_avatar_red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="买家"
                android:textSize="16sp"
                android:textColor="@color/textPrimaryLight"/>

            <TextView
                android:id="@+id/tv_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="2017年07月02日 15:22"
                android:textSize="14sp"
                android:textColor="@color/textSecondaryLight" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="72dp"
            android:background="#33000000"/>

    </RelativeLayout>

    <RatingBar
        android:id="@+id/rb_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/rl_1"
        android:numStars="5"
        android:rating="4"
        android:stepSize="1"
        android:isIndicator="true"
        style="@style/Widget.AppCompat.RatingBar.Small" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb_level"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="我觉得这个苹果很大很大\n我觉得这个苹果很大很大\n我觉得这个苹果很大很大\n我觉得这个苹果很大很大\n我觉得这个苹果很大很大"
        android:textSize="16sp"
        android:textColor="@color/textPrimaryLight"/>

</RelativeLayout>