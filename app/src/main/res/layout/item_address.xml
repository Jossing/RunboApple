<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="8dp"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="A 级"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@color/textPrimaryLight"/>

    <TextView
        android:id="@+id/splitter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/address_name"
        android:layout_alignBaseline="@+id/address_name"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="|"
        android:textSize="18sp"
        android:textColor="@color/textSecondaryLight"/>

    <TextView
        android:id="@+id/address_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/splitter1"
        android:layout_alignBottom="@+id/address_name"
        android:ellipsize="end"
        android:lines="1"
        android:text="河北衡水"
        android:textSize="18sp"
        android:textColor="@color/textSecondaryLight"/>

    <ImageView
        android:id="@+id/address_im"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/address_name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:alpha="0.6"
        app:srcCompat="@drawable/ic_place_black_24dp"/>
    <TextView
        android:id="@+id/address_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="38dp"
        android:ellipsize="end"
        android:layout_below="@+id/address_name"
        android:text="红富士苹果"
        android:textSize="16sp"
        android:textColor="@color/textSecondaryLight" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e0e0e0"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/address_address"/>
    <CheckBox
        android:id="@+id/address_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/address_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/ic_delete_red_24dp"
        android:visibility="gone"
        android:layout_centerVertical="true"/>
</RelativeLayout>

