<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_apple_detailed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jossing.runboapple.main.view.AppleDetailedActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/rl_bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:clipToPadding="false">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_imv"
                android:layout_width="match_parent"
                android:layout_height="336dp"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/imv"
                android:layout_width="match_parent"
                android:layout_height="336dp" />

            <!-- 描述 -->
            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vp_imv"
                android:background="@android:color/background_light">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/tv_quality"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="红富士苹果"
                    android:textSize="24sp"
                    android:textColor="@color/textPrimaryLight"/>

                <TextView
                    android:id="@+id/tv_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:text="A 级"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimaryLight"/>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp"
                    android:text="甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜甜"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondaryLight"/>

            </RelativeLayout>

            <!-- 原产地 -->
            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/rl_1"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light">

                <ImageView
                    android:id="@+id/imv_address"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/ic_source_address_black_24dp"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="16dp"
                    android:text="河北衡水"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimaryLight"/>

            </RelativeLayout>

            <!-- 用户评论 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/rl_2"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light">

                <ImageView
                    android:id="@+id/imv_comment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/ic_comment_black_24dp"/>

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingStart="72dp"
                    android:paddingEnd="72dp"
                    android:gravity="center_vertical"
                    android:text="用户评论"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimaryLight"
                    android:clickable="true"
                    android:background="?selectableItemBackground"/>

                <ImageView
                    android:id="@+id/imv_comment_in"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <!-- 底部栏 -->
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_light">

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="#0D000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/v1"
            android:background="#19000000"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_count"
            android:layout_marginStart="16dp"
            android:text="供货："
            android:textSize="12sp"
            android:textColor="@color/textSecondaryLight"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv"
            android:text="1000 kg"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_want_buy"
            android:layout_width="112dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="我要买"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/my_button_shape_primary"
            style="@style/Widget.AppCompat.Button.Borderless" />

    </RelativeLayout>

</RelativeLayout>
